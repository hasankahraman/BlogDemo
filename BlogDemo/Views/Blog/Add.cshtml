@model EntityLayer.Concrete.Blog
@{
    ViewData["Title"] = "Add";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}
<h3>Create New Blog</h3>
<br />
@using (Html.BeginForm("Add","Blog", FormMethod.Post))
{
    @Html.Label("Title")
    @Html.TextBoxFor(x=> x.Title, new {@class="form-control"})
    @Html.ValidationMessageFor(x=> x.Title)
    <br />
    @Html.Label("Content")
    @Html.TextAreaFor(x=> x.Content, 15, 3, new {@class="form-control"})
    @Html.ValidationMessageFor(x=> x.Content)
    <br />
    @Html.Label("Image")
    @Html.TextBoxFor(x=> x.Image, new {@class="form-control"})
    @Html.ValidationMessageFor(x=> x.Image)
    <br />
    @Html.Label("ImageThumb")
    @Html.TextBoxFor(x=> x.ImageThumbnail, new {@class="form-control"})
    @Html.ValidationMessageFor(x=> x.ImageThumbnail)
    <br />
    @Html.Label("Category")
    @Html.DropDownListFor(x=> x.CategoryId, (List<SelectListItem>)ViewBag.Categories, new {@class="form-control"})
    <br />
    <button class="btn btn-dark" type="submit">Create</button>
}
