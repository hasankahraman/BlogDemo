@using EntityLayer.Concrete
@model List<Message>

@{
    ViewData["Title"] = "Sentbox";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}
<h1>Sentbox</h1>

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Subject</th>
        <th>To</th>
        <th>Created At</th>
        <th>Details</th>

    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <th>@item.Id</th>
            <td>@item.Subject</td>
            <td>@item.ToUser.NameSurname</td>
            <td>@item.CreatedAt.ToShortDateString()</td>
            <td><a href="/Message/GetDetails/@item.Id" class="btn btn-warning">Open</a></td>
        </tr>
    }
</table>
<a href="/Message/Send" class="btn btn-primary">Create New</a>
