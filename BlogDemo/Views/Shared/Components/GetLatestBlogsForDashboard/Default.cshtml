@using EntityLayer.Concrete
@model List<Blog>

<div class="row">
    <div class="col-12 grid-margin">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Latest Blogs</h4>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th> # </th>
                                <th> Title </th>
                                <th> Writer </th>
                                <th> Category </th>
                                <th> Created At </th>
                                <th> Status </th>
                                <th>Details</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        <img src="@item.Image" class="mr-3" alt="image">
                                    </td>
                                    <td> @item.Title</td>
                                    <td>@item.UserId</td>
                                    <td>
                                        <label class="badge badge-gradient-success">@item.Category.Name</label>
                                    </td>
                                    <td> @item.CreatedAt.ToShortDateString() </td>
                                    <td>@item.Status</td>
                                    <td><a href="/Blog/GetDetails/@item.Id" class="btn btn-dark">Go</a></td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>