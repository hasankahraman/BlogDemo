<div class="tech-btm">
    <h4>Sign up to our newsletter</h4>
    <p>Writer Your E-Mail Address And Learn Everything. </p>
    <form method="post">
        <input type="email" id="txtEmail" placeholder="Email" required="" name="Email">
        <input type="submit" id="btnSubscribe" value="Subscribe">
    </form>
</div>

<script type="text/javascript">
    $("#btnSubscribe").click(function(){
        let values = {
            Email: $("#txtEmail").val()
        };
        $.ajax ({
            type:"post",
            url: "/Newsletter/PVSignUpForNewsletter/",
            data:values,
            success: function (func) {
                alert("You've successfully subscribed.");
                let result = jQuery.parseJSON(func);
            }
        });
    });
</script>

<script src="https://code.jquery.com/jquery-3.5.1.min.js" type="text/javascript"></script>