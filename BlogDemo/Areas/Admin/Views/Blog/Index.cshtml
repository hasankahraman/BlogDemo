@using EntityLayer.Concrete
@model List<Blog>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<!DOCTYPE html>
<html>

<body>
    <div class="wrapper wrapper-content animated fadeInRight">
        <div class="row">
            @foreach (var item in Model)
            {
                            <div class="col-md-3">
                <div class="ibox">
                    <div class="ibox-content product-box">

                        <div class="product-imitation">
                            <img src="@item.ImageThumbnail" width="300" height="200"/>
                        </div>
                        <div class="product-desc">
                            <span class="product-price">
                                    @item.Category.Name
                            </span>
                                <small class="text-muted">@item.CreatedAt.ToShortDateString()</small>
                            <a href="#" class="product-name"> @item.Title</a>



                            <div class="small m-t-xs">
                                @item.Content.Substring(0,25) ..
                            </div>
                            <div class="m-t text-righ">

                                <a href="/Blog/GetDetails/@item.Id/" class="btn btn-xs btn-outline btn-primary">Go Details<i class="fa fa-long-arrow-right"></i> </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            }

        </div>
    </div>
</body>

</html>
