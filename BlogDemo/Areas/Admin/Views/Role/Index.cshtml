@using EntityLayer.Concrete
@model List<AppRole>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="ibox ">
    <div class="ibox-title">
        <h5>Roles </h5>
        <div class="ibox-tools">
            <a class="collapse-link">
                <i class="fa fa-chevron-up"></i>
            </a>
        </div>
    </div>
    <div class="ibox-content">

        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Name</th>
                    <th>Normalized Name</th>
                    <th>Delete</th>
                    <th>Edit</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Name</td>
                        <td>@item.NormalizedName</td>
                        <td><a href="/Admin/Role/Delete/@item.Id" class="btn btn-outline-danger">Delete</a></td>
                        <td><a href="/Admin/Role/Update/@item.Id" class="btn btn-outline-success">Edit</a></td>
                    </tr>
                }
            </tbody>
        </table>
        
        <a href="/Admin/Role/Add" class="btn btn-outline-primary">Create New Role</a>
        <a href="/Admin/Role/UserRoleList/" class="btn btn-outline-dark"> Go To User & Roles </a>
        

    </div>
</div>