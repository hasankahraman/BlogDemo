@model List<RoleAssignViewModel>
@{
    ViewData["Title"] = "AssignRole";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<form method="post">
    @for (int i = 0; i < Model.Count; i++)
    {
        <div class="form-check">
            <input type="hidden" asp-for="@Model[i].RoleId" />
            <input type="hidden" asp-for="@Model[i].Name" />
            <input type="checkbox" asp-for="@Model[i].isExist" class="form-check-input" />
            <label class="form-check-label" for="@Model[i].isExist">@Model[i].Name</label>
        </div>
    }
    <br />
    <button class="btn btn-info"> Save Changes</button>
</form>
<br />
<a href="/Admin/Role/UserRoleList/" class="btn btn-dark">Go To User & Roles</a>