@using EntityLayer.Concrete
@model List<AppUser>
@{
    ViewData["Title"] = "UserRoleList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="ibox ">
    <div class="ibox-title">
        <h5>Users & Roles </h5>
        <div class="ibox-tools">
            <a class="collapse-link">
                <i class="fa fa-chevron-up"></i>
            </a>
        </div>
    </div>
    <div class="ibox-content">

        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>User</th>
                    <th>Role</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.UserName</td>
                        <td><a href="/Admin/Role/AssignRole/@item.Id/" class="btn btn-info">Assign Role</a></td>
                    </tr>
                }
            </tbody>
        </table>

        <a href="/Admin/Role/Index/" class="btn btn-outline-primary">Go To Roles</a>

    </div>
</div>